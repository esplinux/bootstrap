build $python/configure: download
  url = https://www.python.org/ftp/python/$$(printf %s $python| sed 's/Python-//')/$python.tgz

build $python/Makefile: configure $python/configure
  description = Configuring $python
  prefix = CC='clang' CFLAGS='$cflags' LDFLAGS='$ldflags'
  opts = --prefix='' --without-ensurepip

build host-$python/bin/python: make $python/Makefile | host-make
  description = Building $python
  prefix = DESTDIR=$$PWD/host-$python
  target = install

build host-python: phony host-$python/bin/python
