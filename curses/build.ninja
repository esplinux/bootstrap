build $curses/GNUmakefile: git
  url = https://github.com/sabotage-linux/netbsd-curses
  destination = $curses

build out-$curses/lib/libcurses.so: make $curses/GNUmakefile | musl clang make
  description = Building $curses
  target = HOSTCC=clang CC='$cc --sysroot=$sysroot $cflags' PREFIX='' DESTDIR=$$PWD/out-$curses install

build curses: phony out-$curses/lib/libcurses.so
