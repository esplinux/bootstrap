build $curses/GNUmakefile: git
  url = https://github.com/sabotage-linux/netbsd-curses
  destination = $curses

build target-$curses/lib/libcurses.so: make $curses/GNUmakefile | host-make musl clang
  description = Building $curses
  target = HOSTCC=clang CC='$cc --sysroot=$sysroot $cflags' PREFIX='' DESTDIR=$$PWD/target-$curses install

build curses: phony target-$curses/lib/libcurses.so
