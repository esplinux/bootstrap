build $curses/GNUmakefile: git
  url = https://github.com/sabotage-linux/netbsd-curses
  destination = $curses

build $sysroot/lib/libcurses.so: make $curses/GNUmakefile | make $sysroot/lib/libc.so
  description = Building $curses
  target = CC=clang CFLAGS="--sysroot=$sysroot $cflags" PREFIX='' DESTDIR=$sysroot install

build curses: phony $sysroot/lib/libcurses.so
