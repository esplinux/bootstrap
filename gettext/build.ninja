build $gettext/Makefile: git
  url = https://github.com/sabotage-linux/gettext-tiny
  destination = $gettext

build host-$gettext/bin/msgfmt: make $gettext/Makefile | host-make
  description = Building $gettext
  prefix = CC='clang' CFLAGS='$cflags' LDFLAGS='$ldflags' DESTDIR=$$PWD/host-$gettext
  target = LIBINTL=NONE prefix='' install

build host-gettext: phony host-$gettext/bin/msgfmt
