build $toybox/Makefile: git
  url = https://github.com/landley/toybox
  destination = $toybox

build $sysroot/bin/toybox: make $toybox/Makefile | clang out-$linux/include/linux/version.h
  description = Building $toybox
  prefix = CC=$cc CFLAGS="--sysroot=$sysroot $cflags -I$$PWD/out-$linux/include" LDFLAGS="--static" PREFIX=$sysroot/bin
  nproc = 1
  target = defconfig toybox install_flat

build toybox: phony $sysroot/bin/toybox
