build $linux/Makefile: download
  url = https://cdn.kernel.org/pub/linux/kernel/v5.x/$linux.tar.gz

build out-$linux/include/linux/version.h: make $linux/Makefile | make
  description = Building $linux headers
  target = CC=clang HOSTCC=clang INSTALL_HDR_PATH=$$PWD/out-$linux headers_install

build $linux: phony $linux/Makefile
build linux-headers: phony out-$linux/include/linux/version.h
