build $zlib/configure: download
  url = https://www.zlib.net/$zlib.tar.gz

build $zlib/Makefile: configure $zlib/configure | musl clang make
  description = Configuring $zlib
  prefix = CC=$cc CFLAGS='--sysroot=$sysroot $cflags' LDFLAGS='--sysroot=$sysroot $ldflags'
  opts = --prefix=''

build out-$zlib/lib/libz.so: make $zlib/Makefile
  description = Building $zlib
  prefix = DESTDIR=$$PWD/out-$zlib
  target = install

build zlib: phony out-$zlib/lib/libz.so
